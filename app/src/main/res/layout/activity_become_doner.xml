<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BecomeDoner">

    <Button
        android:id="@+id/submit_btn"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/black"
        android:text="SUBMIT"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Donor_Phone" />

    <AutoCompleteTextView
        android:id="@+id/Select_District2"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="#E5E3E3"
        android:completionThreshold="1"
        android:ems="10"
        android:hint="Select District"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColorHint="@color/black"
        app:layout_constraintStart_toStartOf="@+id/Donor_Name"
        app:layout_constraintTop_toBottomOf="@+id/Donor_Name" />

    <EditText
        android:id="@+id/Donor_Age"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="#E5E3E3"
        android:ems="10"
        android:hint="Age"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/Donor_Name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Donor_Name"
        app:layout_constraintTop_toBottomOf="@+id/Select_District2" />

    <AutoCompleteTextView
        android:id="@+id/donor_Gender"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="#E5E3E3"
        android:ems="10"
        android:hint="Gender"
        android:completionThreshold="0"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/Donor_Name"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/Donor_Name"
        app:layout_constraintTop_toBottomOf="@+id/Select_District2" />

    <AutoCompleteTextView
        android:id="@+id/Blood_Type2"
        android:layout_width="151dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:background="#E5E3E3"
        android:completionThreshold="1"
        android:ems="10"
        android:hint="Blood Type"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/Donor_Name"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/Select_District2"
        app:layout_constraintTop_toBottomOf="@+id/Donor_Name" />

    <EditText
        android:id="@+id/Donor_Name"
        android:layout_width="322dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="44dp"
        android:background="#E5E3E3"
        android:ems="10"
        android:hint="Full Name"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/Requestform"
        app:layout_constraintHorizontal_bias="0.43"
        app:layout_constraintStart_toStartOf="@+id/Requestform"
        app:layout_constraintTop_toBottomOf="@+id/Requestform" />

    <TextView
        android:id="@+id/Requestform"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Donor Form"
        android:textColor="@color/black"
        android:textSize="30sp"


        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.398"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Donor_Email"

        android:layout_width="322dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="#E5E3E3"
        android:ems="10"

        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColorHint="@color/black"
        app:layout_constraintStart_toStartOf="@+id/Donor_Age"
        app:layout_constraintTop_toBottomOf="@+id/Donor_Age" />

    <EditText
        android:id="@+id/Donor_Phone"
        android:layout_width="322dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="#E5E3E3"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="phone"
        android:padding="10dp"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/Donor_Email"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Donor_Email"
        app:layout_constraintTop_toBottomOf="@+id/Donor_Email" />

    <ImageButton
        android:id="@+id/home_btn"
        android:layout_width="130dp"
        android:layout_height="64dp"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/divider2"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/icons8_home_page_75"
        tools:ignore="SpeakableTextPresentCheck" />

    <View
        android:id="@+id/divider2"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:layout_marginTop="108dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/submit_btn" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="HOME"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/home_btn"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/home_btn" />

    <ImageButton
        android:id="@+id/viewrequest_btnD"
        android:layout_width="130dp"
        android:layout_height="64dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/home_btn"
        app:layout_constraintTop_toTopOf="@+id/divider2"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/icons8_bell_75"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="View Request"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/viewrequest_btnD"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toEndOf="@+id/home_btn"
        app:layout_constraintTop_toTopOf="@+id/viewrequest_btnD" />

    <ImageButton
        android:id="@+id/makerequest_btnD"
        android:layout_width="130dp"
        android:layout_height="64dp"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/viewrequest_btnD"
        app:layout_constraintTop_toTopOf="@+id/viewrequest_btnD"
        app:srcCompat="@drawable/icons8_add_75"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Make Request"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/makerequest_btnD"
        app:layout_constraintHorizontal_bias="0.679"
        app:layout_constraintStart_toEndOf="@+id/viewrequest_btnD"
        app:layout_constraintTop_toTopOf="@+id/makerequest_btnD" />

</androidx.constraintlayout.widget.ConstraintLayout>